nextflow_process {

    name "Test Process ALIGN"
    script "main.nf"
    process "ALIGN"

    test("Should run alignment") {

        when {
            process {
                """
                input[0] = file("${projectDir}/tests/data/SVP.fas")
                input[1] = [
                    file("${projectDir}/data/isolate_fasta/108AT.fas"),
                    file("${projectDir}/data/isolate_fasta/108BT.fas"),
                    file("${projectDir}/data/isolate_fasta/15BT-relapse.fas")
                ]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }
    }
}